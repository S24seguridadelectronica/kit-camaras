{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@supabase/*": ["supabase/*"]
    },
    "allowJs": true,
    "target": "es6",
    "lib": ["dom", "es2015"],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "noEmit": false
  },
  "include": ["src/**/*.d.ts", "src"],
  "exclude": ["node_modules"]
}
