{
  "compilerOptions": {
    "baseUrl": "src",  // Permite importar desde la carpeta src de forma absoluta
    "paths": {
      "@/*": ["*"]  // Configura '@' para apuntar a la carpeta 'src'

    },
    "target": "es5",
    "lib": ["dom", "es2015"],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "jsx": "react",
    "skipLibCheck": true,
    "noEmit": true  // Esto asegura que no se emitan archivos cuando se compile
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
