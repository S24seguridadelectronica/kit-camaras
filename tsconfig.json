{
  "compilerOptions": {
    "baseUrl": "./src", // Necesario para que los paths funcionen correctamente
    "paths": {
      "@/*": ["*"] // Alias para importar desde la carpeta src
    },
    "target": "es6",
    "lib": ["dom", "es2015"],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "noEmit": false
  },
  "include": ["src/**/*.d.ts", "src"],
  "exclude": ["node_modules"]
}